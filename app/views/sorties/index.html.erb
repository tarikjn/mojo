<div class="dates-layout">
	<%= flash_messages %>
	<div class="columns">
		<div class="col-0">
			<h3>Past</h3>
			<%
				if @past_sorties.size > 0
			%>
			<ul>
				<% @past_sorties.each do |s| %>
					<li class="date">
						<div class="status">
							<%
								if !s.report_by(current_user)
							%>
							Please complete the date report.
							<%
								else
							%>
							You completed the date report.
							<%
								end
							%>
						</div>
						<div class="title"><%= s.title %></div>
						<div class="actions">
							<!-- Report -->
						</div>
					</li>
				<% end %>
			</ul>
			<%
				else
			%>
			<div class="empty">
				You don't have any past dates.
			</div>
			<%
				end
			%>
		</div>
		<div class="col-1">
			<h3>Upcoming</h3>
			<%
				if @upcoming_sorties.size > 0
			%>
			<ul>
				<%= render :partial => 'sortie', :collection => @upcoming_sorties %>
			</ul>
			<%
				else
			%>
			<div class="empty">
				You don't have any scheduled dates.
			</div>
			<%
				end
			%>
		</div>
		<div class="col-2">
			<h3>Open</h3>
			<%
				if @open_sorties.size > 0
			%>
			<ul>
				<%= render :partial => 'sortie', :collection => @open_sorties %>
			</ul>
			<%
				else
			%>
			<div class="empty">
				Dates you create will appear here.
			</div>
			<%
				end
			%>
		</div>
	</div>
	<div class="action-boxes">
	</div>
</div>

