<div class="form-inputs column-titles">
	
	<%= f.fields_for :activity do |s| %>
	<div class="form-item"> 
		<div class="title">Category</div> 
		<!-- TODO: fix to non-JS and arrows use, see: http://test.cita.illinois.edu/aria/radio/radio1.php --> 
		<div class="hybrid-input mj-select-container">
			<%= s.select :activity_type, [["Food and Drinks", "food-and-drinks"], ["Entertainment", "entertainment"], ["Outdoor", "outdoor"]], {}, {:class => "mj-category-select"} %>
			<div class="after">▾</div>
		</div>


	</div> 
	<div class="form-item"> 
		<div class="title">Title</div> 
		<div class="hybrid-input"> 
			<%= s.text_field :title %>
		</div> 
	</div> 
	<div class="form-item"> 
		<div class="title">Description</div> 
		<div class="hybrid-input">
			<%= s.text_area :description %>
		</div> 
	</div>
	<div class="form-item"> 
		<div class="title">Time</div> 
		<div class="hybrid-input">
			<%= s.datetime_select :time %>
		</div>
	</div> 
	<div class="form-item"> 
		<div class="title">Location</div>
		<div class="hybrid-input featured">
			<div class="roller">
				<div class="prev">◀</div>
				<div class="list">
					<div class="title">Feat.:</div>
					<div class="business">
						<div class="title">La Boulange</div>
						<div class="details">Pacific Heights - Open until 7</div>
						<div class="offer">Serving a special chocolate berry coffee.</div>
					</div>
					<div class="business" style="background-image: url(/images/businesses/tortillaheights.jpg)">
						<div class="title">Tortilla Heights</div>
						<div class="details">Pacific Heights - Open until 11</div>
						<div class="offer">Welcomes Mojo members.</div>
					</div>
				</div>
				<div class="next">▶</div>
			</div>
		</div>
		<div class="hybrid-input mj-location-input address-view">
			<div id="map_canvas"></div> 
			<div class="map-side"> 
				<div class="selected-subset">
					<div class="title">City:</div>
					<div class="item">
						<div class="name">San Francisco, CA</div>
						<div class="state">Currently Selected</div>
					</div>
				</div>
				<div class="selected-subset operating">
					<div class="title">Address:</div>
					<div class="search"> 
						<input id="address" type="text" value="Search a biz, a place or an address" class="tip" /> 
					</div> 
					<div class="results">
					</div>
				</div>
			</div> 
		</div> 
	</div>
	<% end %>

</div>
